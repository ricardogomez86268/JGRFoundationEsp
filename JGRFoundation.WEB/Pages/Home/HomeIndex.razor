@page "/homes"
@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService
@attribute [Authorize(Roles = "Admin, User")]

@if (Homes is null)
{
    <div class="spinner" />
}
else
{
    <GenericList MyList="Homes">
        <RecordsComplete>
            <div class="card">
                <div class="card-header">
                    <span>
                        <i class="oi oi-home" /> Hogares
                    </span>
                </div>
                <div class="card-body">
                    <Pagination CurrentPage="currentPage"
                            TotalPages="totalPages"
                            SelectedPage="SelectedPageAsync" />

                    <table id="TablasGrid">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                                <th>Coordenada</th>
                                <th>Líneas</th>
                                <th>Cantidad electrodomesticos</th>
                                <th>Total consumo</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var home in Homes)
                            {
                                <tr>
                                    <td>
                                        @home.User!.FullName
                                    </td>
                                    <td>
                                        @home.Coordinate
                                    </td>
                                    <td>
                                        @home.Lines
                                    </td>
                                    <td>
                                        @($"{home.Quantity}")
                                    </td>
                                    <td>
                                        @($"{home.TotalConsumption:N2}")
                                    </td>
                                    <td>
                                        <a href="/homeDetails/@home.Id" class="btn btn-info"><i class="oi oi-laptop" /> Detalles</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </RecordsComplete>
    </GenericList>
}

@code {
    private int currentPage = 1;
    private int totalPages;

    public List<Home>? Homes { get; set; }

    [Parameter]
    [SupplyParameterFromQuery]
    public string Page { get; set; } = "";

    protected async override Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task SelectedPageAsync(int page)
    {
        currentPage = page;
        await LoadAsync(page);
    }

    private async Task LoadAsync(int page = 1)
    {
        if (!string.IsNullOrWhiteSpace(Page))
        {
            page = Convert.ToInt32(Page);
        }

        string url1 = $"api/homes?page={page}";
        string url2 = $"api/homes/totalPages";

        try
        {
            var responseHppt = await repository.Get<List<Home>>(url1);
            var responseHppt2 = await repository.Get<int>(url2);
            Homes = responseHppt.Response!;
            totalPages = responseHppt2.Response!;
        }
        catch (Exception ex)
        {
            await sweetAlertService.FireAsync("Error", ex.Message, SweetAlertIcon.Error);
        }
    }
}
